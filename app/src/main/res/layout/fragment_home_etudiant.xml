<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Section News -->
        <LinearLayout
            android:id="@+id/section_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#303F9F"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="News"
            android:textSize="20sp"
            android:textColor="#F5F5DC"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- ProgressBar pour l'état de chargement -->
        <ProgressBar
            android:id="@+id/news_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- Message d'erreur -->
        <TextView
            android:id="@+id/news_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF5722"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <!-- Container pour afficher la liste des news (peut être remplacé par un RecyclerView) -->
        <LinearLayout
            android:id="@+id/news_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

    <!-- Section Moyenne Générale -->
    <LinearLayout
        android:id="@+id/section_average"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/average_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moyenne générale"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <ProgressBar
            android:id="@+id/average_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/average_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF5722"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/average_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Section Présences / Absences -->
    <LinearLayout
        android:id="@+id/section_presence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/presence_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Présences / Absences"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <ProgressBar
            android:id="@+id/presence_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/presence_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF5722"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/presence_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Présences : 0" />

        <TextView
            android:id="@+id/absence_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Absences : 0" />
    </LinearLayout>

    <!-- Section Cours du prochain jour de séance -->
    <LinearLayout
        android:id="@+id/section_seances"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/seances_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cours du prochain jour de séance"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <ProgressBar
            android:id="@+id/seances_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/seances_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF5722"
            android:visibility="gone"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/seances_next_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

        <!-- Container pour afficher la liste des séances (peut être un RecyclerView) -->
        <LinearLayout
            android:id="@+id/seances_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

</LinearLayout>
    </ScrollView>
