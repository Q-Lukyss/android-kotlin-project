<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Thème principal de l'application -->
    <style name="Theme.Androidkotlinproject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Couleurs principales -->
        <item name="colorPrimary">@color/violet</item>
        <item name="colorPrimaryVariant">@color/darkblue</item>
        <item name="colorOnPrimary">@color/lightbeige</item>
        <!-- Couleurs secondaires -->
        <item name="colorSecondary">@color/lightbeige</item>
        <item name="colorSecondaryVariant">@color/lightviolet</item>
        <item name="colorOnSecondary">@color/darkblue</item>
        <!-- Couleur de fond de la fenêtre -->
        <item name="android:windowBackground">@color/darkblue</item>
        <!-- Autres personnalisations -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>
